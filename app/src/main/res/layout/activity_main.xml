<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a3bded"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/toastText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已连接到：http://test.durl.ga/"
            android:textColor="#FFF"
            android:textIsSelectable="true"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <Button
                android:id="@+id/openUrl"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="#6FFF"
                android:text="打开" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/connectionText"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/back_circle"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="连 接"
                android:textColor="#FFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待连接！"
                    android:textColor="#FFF"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#1FFF" />

    <LinearLayout
        android:id="@+id/main_select_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_home_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="#7FFF"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="合租账号"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="2000 **** 0111"
                    android:textColor="#7FFF"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_action_right" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/openQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#2FFF"
        android:paddingHorizontal="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:text="该软件仅用于技术学习，任何人不得用于盈利，开发者不承担任何法律责任"
        android:textColor="#9FFF"
        android:textIsSelectable="true"
        android:textSize="16sp" />


</LinearLayout>